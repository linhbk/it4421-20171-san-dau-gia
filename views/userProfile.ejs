<!DOCTYPE html>
<html>
    <head>
            
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width initial-scale=1">
        <title>User Profile</title>
    
    
        <link href="../resources/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="../resources/css/style.css" rel="stylesheet" type="text/css">
        <script src="../resources/js/jquery-3.1.1.min.js" type="text/javascript"> </script>
        <script src="../resources/js/script.js" type="text/javascript"></script>
        <script src="../resources/bootstrap/js/bootstrap.min.js" type="text/javascript"> </script>
                
    </head>
    <body>
        <!-- Header -->
        <%- include('partition/header.ejs') %>
        
        <div class="content container">

           
           <div class="col-xs-5 col-sm-6 col-md-3 col-lg-3">
                <div class="table-bordered imgAvata">
                    <img src="<%- user.image %>" onerror="this.src='resources/images/defaultAvata.jpg'" class="img-responsive img-display" alt="avata">
                </div>
                <div class="userBrief">
                    <h3><%= user.name %></h3>
                    <h4><%= user.username %></h4>
                    <p><span class="glyphicon glyphicon-map-marker"></span><%= user.address %></p>
                    <hr>
                </div>
                <div class="verifiedInfo">
                    <div class="profileLabel">Verified Info</div>
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-info glyphicon glyphicon-ok-circle"> Email Address </li>
                        <li class="list-group-item list-group-item-info glyphicon glyphicon-ok-circle"> Phone Number </li>
                    </ul>
                </div>
                
                <div class="connectedAcc">
                    <div class="profileLabel">Connected Acc</div>
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-danger glyphicon glyphicon-remove-circle"> Facebook Account</li>
                    </ul>
                </div>
           </div>

           
            <div class="col-xs-7 col-sm-6 col-md-9 col-lg-9">
                <h1>Hey, I'm <span id="userName"><%= user.name %></span>!</h1>
                <!-- <h4><span class="glyphicon glyphicon-map-marker"></span> Ha Noi, Joined in October 2017</h4> -->
                <p><span class="glyphicon glyphicon-flag"></span><a href="#"> Report this user!</a></p>
                <hr>

                <div>
                    <h2>About Me</h2>
                    <span><%= user.aboutme %></span>
                </div>
                <hr>
                <div>
                    <h2>Selling Product</h2>
                    <div class="row">
                        <% products.forEach((product) => { %>
                            <div class="col-sm-6 col-md-4 col-lg-4">
                                <div class="table-bordered productPreview">
                                    <img src="<%- product.image %>" alt="<%- product.image %>"
                                        class="img-display table-bordered img-responsive">
                                    <div class="caption">
                                        <a href="/detail?id=<%-product._id%>">
                                            <h4 class="textPreview"><%= product.name %></h4>
                                        </a>
                                        <div class="bidTimePreview">
                                            <h4> Price: <%= product.price %>$ </h4>
                                            <div id="StartTime"> Start Time: <%= product.start_time %></div>
                                            <div id="EndTime"> End Time: <%= product.end_time %></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <% }) %>

                    </div>
                    <!-- End row product -->
                </div>
                <!-- End sell product -->
                <hr>
                <div>
                    <h2>Reviews</h2>
                    <ul>
                        <li>
                            <span> Minhnb is a good teacher!</span>
                        </li>
                        <li>
                            <span> I love him!</span>
                        </li>
                        <li>
                            <span> His product is very good!</span>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- End col-md-9 -->
           <hr>
   
        </div>
        
    <!-- End container -->
    </body>
</html>
